<h1 id = "user">Users</h1>
  <table>
  <thead>
      <th>Name</th>
      <th>Age</th>
      <th>Gender</th>
      <th>Edit user</th>
      <th>Delete user</th>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.age %></td>
      <td><%= user.gender %></td>
      <td><%= link_to "Edit", edit_user_path(user) %></td>
      <td><%= link_to "Destroy", user_path(user), data: {
        turbo_method: :delete,
        turbo_confirm: "Are you sure?"
      } %></td>
    </tr>
    <% end %>
  </tbody>
 </table><br>

 <button type = "button"><%= link_to "New User", new_user_path %></button>
